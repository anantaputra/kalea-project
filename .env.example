#######################################
# Application Information
#######################################
APP_NAME="KALEA REST API"
APP_VERSION="1.0.0"
APP_PORT=3000

#######################################
# Swagger Configuration
#######################################
# Enable Swagger UI (true/false)
SWAGGER_ENABLE=true
# Docs path (without leading slash)
SWAGGER_PATH=docs
# Docs title/description/version
SWAGGER_TITLE="KALEA API"
SWAGGER_DESC="API documentation"
SWAGGER_VERSION=1.0

#######################################
# CORS Configuration
#######################################
# Comma-separated list of allowed origins. Use '*' or leave empty to allow all.
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
# Whether to send cookies/authorization headers with cross-site requests.
CORS_CREDENTIALS=true

#######################################
# Security (Encryption & Hashing)
#######################################
# Format of ENCRYPTION_KEY: base64 or hex
ENCRYPTION_KEY_FORMAT=base64
# 32-byte encryption key (example only; replace in deployment)
# This is 32 zero bytes encoded in base64
ENCRYPTION_KEY=AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=
# bcrypt salt rounds (10â€“12 recommended)
BCRYPT_SALT_ROUNDS=10

#######################################
# Database (Postgres via TypeORM)
#######################################
# Enable DB integration (set to true to connect)
DB_ENABLE=false
# Connection settings (host/port OR single URL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=kalea
# Optional: single connection URL (preferred on Supabase/Render/etc.)
# Example: postgres://user:pass@host:5432/dbname?sslmode=require
DB_URL=
# Many platforms provide DATABASE_URL; we support it too
# DATABASE_URL will be used if DB_URL is empty
# DATABASE_URL=
# Optional features
# Enable SSL (true for many managed Postgres providers)
# When true, we set { rejectUnauthorized: false }
DB_SSL=false
# Optionally override rejectUnauthorized behavior (default false)
DB_SSL_REJECT_UNAUTHORIZED=false
# Auto-sync schema in dev only; never enable in production
DB_SYNC=false
# Log SQL queries
DB_LOGGING=false
